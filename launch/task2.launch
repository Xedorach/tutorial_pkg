<launch>

  <arg name="rosbot_pro" default="true" />
  <arg name="use_gazebo" default="false" />

 
  <!-- ROSbot 2.0 -->
  
    <include file="$(find rosbot_ekf)/launch/all.launch">
      <arg name="rosbot_pro" value="$(arg rosbot_pro)" />
    </include>
    <include file="$(find rplidar_ros)/launch/rplidar_a3.launch" />
  

  <node unless="$(arg use_gazebo)" pkg="tf" type="static_transform_publisher" name="laser_broadcaster" args="0 0 0 3.14 0 0 base_link laser 100" />

  <node pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" name="teleop_twist_keyboard" output="screen"/>

  <node pkg="move_base" type="move_base" name="move_base" output="screen">
    <param name="controller_frequency" value="10.0"/>
    <rosparam file="$(find rosbot_mapping)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find rosbot_mapping)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find rosbot_mapping)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find rosbot_mapping)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find rosbot_mapping)/config/trajectory_planner.yaml" command="load" />
  </node>

  <node pkg="explore_lite" type="explore" respawn="true" name="explore" output="screen">
    <rosparam file="$(find rosbot_mapping)/config/exploration.yaml" command="load" />
  </node>

  <node pkg="rviz" type="rviz" name="rviz1" args="-d $(find tutorial_pkg)/rviz/task1.rviz"/>

  <include file="$(find rosbot_mapping)/launch/map_server.launch"/>

  <include file="$(find rosbot_mapping)/launch/amcl_only.launch"/>

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find tutorial_pkg)/rviz/task2.rviz"/>

</launch>